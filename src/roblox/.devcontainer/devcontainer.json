{
	"name": "Roblox",
	"image": "mcr.microsoft.com/devcontainers/base:${templateOption:imageVariant}",

	"features": {
		"ghcr.io/ryanlua/features/rojo:latest": {
			"version": "${templateOption:rojoVersion}",
			"installAftman": "${templateOption:installAftman}"
		}
	},

	"forwardPorts": [
		34872
	],
	"portsAttributes": {
		"34872": {
			"label": "Rojo",
			"onAutoForward": "notify"
		}
	},

	// ðŸ‘‡ Uncomment to run a command after the container is created.
	// "postCreateCommand": "aftman install --no-trust-check",

	"customizations": {
		"vscode": {
			"extensions": [
				"kampfkarren.selene-vscode",
				"johnnymorganz.stylua",
				"johnnymorganz.luau-lsp"
			]
		}
	},

	"remoteUser": "root"
}
